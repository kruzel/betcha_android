<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BetContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        style="@style/BetFrame"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="10dp" >

        <Button
            android:id="@+id/buttonFB"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_rounded_blue"
            android:onClick="OnFBConnect"
            android:text="@string/fb_Connect" />

    	<Button
    	    android:id="@+id/buttonEmail"
    	    android:layout_width="250dp"
    	    android:layout_height="40dp"
    	    android:layout_alignParentBottom="true"
    	    android:layout_centerInParent="true"
    	    android:layout_marginBottom="10dp"
    	    android:background="@drawable/button_gray"
    	    android:onClick="onSubmit"
    	    android:text="@string/email_Connect" />

    	<FrameLayout
    	    android:layout_width="30dp"
    	    android:layout_height="30dp"
    	    android:layout_alignBottom="@+id/buttonFB"
    	    android:layout_alignLeft="@+id/buttonFB"
    	    android:layout_marginBottom="5dp"
    	    android:layout_marginLeft="14dp"
    	    android:background="#00003C" >

    	    <TextView
    	        android:id="@+id/textView1"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_gravity="center_horizontal"
    	        android:text="f"
    	        android:textSize="28dp"
    	        android:textStyle="bold" />

    	</FrameLayout>
    
    </RelativeLayout>

</RelativeLayout>