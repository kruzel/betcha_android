<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        style="@style/BetContainer" > <!-- TODO: change this   -->

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >

	    <fragment
	        android:id="@+id/profile_details_fragment"
	        android:name="com.betcha.fragment.ProfileDetailsFragment"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_margin="4dp" />
 
 	    <fragment
	        android:id="@+id/friends_list_fragment"
	        android:name="com.betcha.fragment.FriendsListFragment"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/profile_details_fragment"
	        android:layout_margin="4dp" />
	     
	</RelativeLayout>
	
</ScrollView>