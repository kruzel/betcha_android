<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/iv_participant_pic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_prediction_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/iv_participant_pic"
        android:text="user"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/tv_prediction_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/tv_prediction_user_name"
        android:ems="10"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:inputType="text"
        android:text="bet"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <CheckBox
        android:id="@+id/cb_prediction_win"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/buttonEdit"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true"
        android:layout_margin="5dp" />
    <Button
        android:id="@+id/buttonEdit"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true"
        android:layout_margin="5dp" 
        android:text="ok" />

</RelativeLayout>