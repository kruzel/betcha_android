<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="Text">
	    <item name="android:textSize">16sp</item>
	    <item name="android:textColor">@color/text_deepocean</item>
	    <item name="android:textStyle">normal</item>
    </style>
    
    <!-- Bets List Item -->

	<style name="BetContainer">
	    <item name="android:background">@drawable/pastelblue_noise_tiled</item>
	</style>    
    
	<style name="BetFrame">
	    <item name="android:background">@drawable/dark_frame_full</item>
	</style>    
    
	<style name="BetContent">
	    <item name="android:background">@drawable/offwhite_bg_selector_full</item>
	</style>
	
	<style name="BetDate" parent="@style/Text">
	    <item name="android:textSize">16sp</item>
	    <item name="android:textColor">@color/text_lightfabric</item>
	</style>
	
	<style name="BetSubject" parent="@style/Text">
	    <item name="android:textSize">22sp</item>
	    <item name="android:textStyle">bold</item>
	</style>
	
	<style name="BetReward" parent="@style/Text">
	    <item name="android:textSize">18sp</item>
  	</style>
  	
	<style name="PredictionPerson">
	    <item name="android:background">@drawable/prediction_border</item>
	</style>
  	
	<style name="PredictionName" parent="@style/Text">
	    <item name="android:textSize">14sp</item>
	    <item name="android:textColor">@color/text_fabric</item>
	</style>

	<style name="PredictionFrame">
	    <item name="android:background">@drawable/bet_bg_prediction</item>
	</style>
  	
	<style name="PredictionText" parent="@style/Text">
	    <item name="android:textSize">16sp</item>
	    <item name="android:textColor">@android:color/white</item>
	    <item name="android:shadowColor">@android:color/black</item>
	    <item name="android:shadowRadius">2</item>
	    <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-2</item>
	</style>
	
	<style name="ChatPerson">
	    <item name="android:background">@drawable/prediction_border</item>
	</style>
	
	<style name="ChatName" parent="@style/Text">
	    <item name="android:textSize">14sp</item>
	    <item name="android:textColor">@color/text_fabric</item>
	</style>
	
	<style name="ChatText" parent="@style/Text">
	    <item name="android:textSize">14sp</item>
	    <item name="android:textColor">@color/text_fabric</item>
	</style>
	
	<style name="loginText" parent="@style/Text">
	    <item name="android:textSize">14sp</item>
	    <item name="android:textColor">@color/text_lightfabric</item>
	</style>
	
	<!-- Create Menu -->
	
	<style name="CreateMenuContainer">
	    <item name="android:background">@drawable/pastelblue_noise_tiled</item>
	    <item name="android:cacheColorHint">@null</item>
	    <item name="android:divider">@null</item>
	    <item name="android:listSelector">@android:color/transparent</item>
	</style>    

	<style name="CreateMenuFrame">
	    <item name="android:background">@drawable/dark_frame_mid</item>
	</style>    
    
	<style name="CreateMenuContent">
	    <item name="android:background">@drawable/offwhite_bg_selector_mid</item>
	</style>    
    
	<style name="CreateMenuCategory" parent="@style/Text">
	    <item name="android:textSize">18sp</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:ellipsize">end</item>
	    <item name="android:lines">1</item>
  	</style>	
		
	<style name="CreateMenuDescription" parent="@style/Text">
	    <item name="android:textSize">18sp</item>
	    <item name="android:color">@color/text_lightfabric</item>
	    <item name="android:ellipsize">end</item>
	    <item name="android:lines">1</item>
	</style>
	
	<!-- Create Suggestions -->
	
	<style name="CreateSuggestionsContainer">
	    <item name="android:background">@drawable/create_bg_suggestions</item>
	</style>

	<style name="CreateSuggestion">
	    <item name="android:background">@drawable/highlight_selector</item>
	</style>

	<style name="CreateSuggestionText" parent="@style/Text">
	    <item name="android:textColor">@color/create_suggestion_text</item>
	    <item name="android:shadowColor">#ff000000</item>
	    <item name="android:shadowRadius">2</item>
	    <item name="android:shadowDx">0</item>
	    <item name="android:shadowDy">-2</item>
	</style>

	<!-- Create Subject / Stake -->
	
	<style name="CreateEditbox" parent="@style/Text">
	    <item name="android:background">@drawable/beveled_white_frame</item>
	    <item name="android:textSize">18sp</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:textColorHint">@color/text_darkhint</item>
	</style>

	<style name="CreateSuggestionSubject" parent="@style/CreateSuggestionText">
	    <item name="android:textSize">18sp</item>
	</style>

	<style name="CreateSuggestionStake" parent="@style/CreateSuggestionText">
	    <item name="android:textSize">12sp</item>
	</style>
	
	<!-- Create Duedate -->
	
	<style name="CreateDuedateContainer">
	    <item name="android:background">@drawable/beveled_white_frame</item>
	</style>
	
	<style name="CreateDuedateHint" parent="@style/Text">
	    <item name="android:textSize">16sp</item>
	    <item name="android:textColorHint">@color/text_darkhint</item>
	</style>
	
	<style name="CreateDuedateText" parent="@style/Text">
	    <item name="android:textSize">16sp</item>
	</style>
			
</resources>