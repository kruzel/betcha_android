<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CreateSuggestion"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    
    <View
        android:id="@+id/v_view"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:background="@drawable/highlight_strong_up_border" />
    
    <TextView 
        android:id="@+id/tv_suggestion_text"
        style="@style/CreatePredictionSuggestionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/v_view"
        android:layout_marginBottom="5dp" />
    
    <ImageView
        android:id="@+id/iv_team_logo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/v_view"
        android:layout_marginTop="5dp" />
    
</RelativeLayout>