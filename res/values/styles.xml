<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Bets List Item -->

	<style name="BetContainer">
	    <item name="android:background">@drawable/pastelblue_noise_tiled</item>
	</style>    
    
	<style name="BetFrame">
	    <item name="android:background">@drawable/bet_bg_frame</item>
	</style>    
    
	<style name="BetContent">
	    <item name="android:background">@drawable/bet_bg_content</item>
	</style>
	
	<style name="BetDate">
	    <item name="android:textSize">16sp</item>
	    <item name="android:textColor">@color/text_lightfabric</item>
	</style>
	
	<style name="BetSubject">
	    <item name="android:textSize">22sp</item>
	    <item name="android:textColor">@color/text_deepocean</item>
	    <item name="android:textStyle">bold</item>
	</style>
	
	<style name="BetReward">
	    <item name="android:textSize">18sp</item>
	    <item name="android:textColor">@color/text_deepocean</item>
  	</style>
  	
	<style name="PredictionPerson">
	    <item name="android:background">@drawable/prediction_border</item>
	</style>
  	
	<style name="PredictionName">
	    <item name="android:textSize">14sp</item>
	    <item name="android:textColor">@color/text_fabric</item>
	</style>

	<style name="PredictionFrame">
	    <item name="android:background">@drawable/bet_bg_prediction</item>
	</style>
  	
	<style name="PredictionText">
	    <item name="android:textSize">16sp</item>
	    <item name="android:textColor">@android:color/white</item>
	    <item name="android:shadowColor">@android:color/black</item>
	    <item name="android:shadowRadius">2</item>
	    <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-2</item>
	</style>
  	
</resources>